<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.museumguild.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/myself"
        android:background="@color/backcolor"
        android:textColor="@color/white"
        android:textSize="28sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.56"
        android:background="@color/backcolor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="80dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personno" />

        <TextView
            android:id="@+id/loginusername"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="登录/注册"
            android:background="@drawable/login_register"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17.68"
        />


    <Button
        android:id="@+id/loginout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7"
        android:text="@string/loginout"
        android:textColor="@color/white"
        android:background="@drawable/buttonclick"/>
</LinearLayout>